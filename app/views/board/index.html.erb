
<div class="container" style="margin-top:20px">
     <div class="well">
         <p style="font-weight:bold; font-size:20px">게시판</p>
         <% @posts.each do |post| %>
           <br>
           <p style="font-weight:bold; font-size:15px"><%= post.title %></p>
           <p><%= post.content %></p>
           <p><%= post.created_at %></p><hr>
           <p style="font-weight:bold">댓글</p>
           <% post.comments.each do |comment| %>
             <%= comment.id %>
             <%= comment.content %><br>
           <% end %>
           <form action="/board/<%= post.id %>/comment_create" method="POST">
             <div class="form-group">
             <input type="text" name="content" class="form-control" placeholder="댓글">
             </div>
             <button type="submit" class="btn btn-default">Submit</button>
           </form>
         <% end %>
     </div>
     
     <form action="/board/create" method="POST">
          <div class="form-group" style="font-weight:bold">제목
            <input type="text" name="title" class="form-control" id="title" placeholder="title">
          </div>
          <div class="form-group" style="font-weight:bold">내용
            <textarea name="content" class="form-control" name="content" row="10" placeholder="content"></textarea>
          </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </div>
     </form>
</div>